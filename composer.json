{
  "name": "calcinai/xero-php",
  "type": "library",
  "description": "A client implementation of the Xero API, with a cleaner OAuth interface and ORM-like abstraction.",
  "homepage": "https://github.com/calcinai/xero-php",
  "license": "MIT",
  "require": {
    "php": ">=5.5.0",
    "ok200paul/oauth2-xero": "*",
    "guzzlehttp/guzzle": "^6.5|^7.0",
    "guzzlehttp/psr7": "^1.5|^1.6|^2.1.1",
    "ext-json": "*",
    "ext-simplexml": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5.21"
  },
  "suggest": {
    "ext-fileinfo": "*",
    "ext-mbstring": "*"
  },
  "autoload": {
    "psr-4": {
      "XeroPHP\\": "src/XeroPHP/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "XeroPHP\\Tests\\": "tests/"
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/ok200paul/oauth2-xero"
    }
  ],
  "minimum-stability": "dev"
}
